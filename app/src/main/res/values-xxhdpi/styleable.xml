        <!-- 文字大小 -->
        <attr name="temperTextSize" format="dimension"/>
        <!-- 文字的颜色 -->
        <attr name="weatextColor" format="color"/>
        <!-- 绘制的线的宽度 -->
        <attr name="chatLineWidth" format="dimension"/>
