<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/activity_cart_management_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f3f5f7"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/left_border_size"
            android:paddingEnd="@dimen/right_border_size">

            <com.honeywell.wholesale.ui.base.BaseTextView
                android:id="@+id/warehouse_manager_default_name_textview"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:maxLength="30"
                android:maxWidth="180dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#313131"
                android:textSize="15dp"
                android:text=""/>

            <com.honeywell.wholesale.ui.base.BaseTextView
                android:id="@+id/warehouse_manager_default_setting_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:textColor="#313131"
                android:textSize="15dp"
                android:text="默认仓库"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/all_border" />

        <ListView
            android:id="@+id/warehouse_manager_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/all_border"
            android:dividerHeight="1dp">
        </ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/all_border" />
    </LinearLayout>

</LinearLayout>