<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/search_result_inventory_imageView"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        />

    <RelativeLayout
        android:id="@+id/search_result_textLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/search_result_inventory_imageView"
        >

        <com.honeywell.wholesale.ui.base.BaseTextView
            android:id="@+id/search_result_productName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/search_result_customer_imageView"
            android:layout_marginStart="10dp"
            android:singleLine="true"
            android:maxWidth="100dp"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:text="12312311111111"
            android:textColor="@color/gray_deep"
            />

        <com.honeywell.wholesale.ui.base.BaseTextView
            android:id="@+id/search_result_productPrice_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/search_result_productName_textView"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:singleLine="true"
            android:textSize="14dp"
            android:gravity="right"
            android:ellipsize="end"
            android:text="123121113444"
            android:layout_marginEnd="12dp"
            />

        <com.honeywell.wholesale.ui.base.BaseTextView
            android:id="@+id/search_result_productCode_textView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/search_result_productName_textView"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:textSize="12dp"
            android:text="1231231111111111111111"
            android:textColor="@color/gray_deep"
            />

        <com.honeywell.wholesale.ui.base.BaseTextView
            android:id="@+id/search_result_productStock_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/search_result_productCode_textView"
            android:layout_below="@id/search_result_productPrice_textView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:singleLine="true"
            android:gravity="end"
            android:maxWidth="120dp"
            android:textSize="14dp"
            android:text="123123444"
            android:layout_marginEnd="12dp"
            />

    </RelativeLayout>





</RelativeLayout>