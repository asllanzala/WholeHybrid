<?xml version="1.0" encoding="utf-8"?>
<com.honeywell.wholesale.ui.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:app="http://schemas.android.com/apk/res-auto"
                                               android:layout_width="wrap_content"
                                               android:layout_height="match_parent"
                                               android:layout_gravity="center">

    <com.honeywell.wholesale.ui.widget.SquareImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textview"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        app:layout_marginTopPercent="10%h"/>

    <TextView
        android:id="@+id/textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text=""
        android:textColor="@color/main_tabbar_text_color"
        app:layout_heightPercent="30%"
        app:layout_marginBottomPercent="5%h"
        app:layout_marginTopPercent="5%h"
        app:layout_textSizePercent="20%"
        app:layout_widthPercent="100%"/>

</com.honeywell.wholesale.ui.widget.PercentRelativeLayout>