<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_cart_management_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/bottom_layout"
            android:fillViewport="true">

        <LinearLayout
            android:id="@+id/pre_transaction_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/pre_cart_product_containner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/left_border_size"
            android:paddingEnd="@dimen/right_border_size"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <Button
                android:id="@+id/pre_continue_button"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="继续选" />

            <Button
                android:id="@+id/pre_order_to_cart_button"
                android:layout_width="190dp"
                android:layout_height="36dp"
                android:layout_marginStart="9dp"
                android:gravity="center"
                android:text="选好了" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>