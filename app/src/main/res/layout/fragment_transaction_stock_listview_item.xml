<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/stock_listview_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <com.honeywell.wholesale.ui.base.BaseTextView
                android:id="@+id/stock_listview_item_product_name_textView"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:text="云南特级普洱茶"
                android:textSize="16dp" />

            <com.honeywell.wholesale.ui.base.BaseTextView
                android:id="@+id/stock_listview_item_product_number_textView"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="end"
                android:text="10箱"
                android:textSize="16dp" />

            <com.honeywell.wholesale.ui.base.BaseTextView
                android:id="@+id/stock_listview_item_unit_money_textView"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="end"
                android:text="￥900.49/箱"
                android:textSize="16dp" />

        </LinearLayout>


        <com.honeywell.wholesale.ui.base.BaseTextView
            android:id="@+id/stock_listview_item_stock_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stock_listview_title_layout"
            android:layout_marginTop="6dp"
            android:text="07-06 17:50 哈姆雷特 完成"
            android:textColor="@color/gray_light"
            android:textSize="12dp" />

        <com.honeywell.wholesale.ui.base.BaseTextView
            android:id="@+id/stock_listview_item_stock_finish_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stock_listview_item_stock_time_textView"
            android:layout_marginTop="2dp"
            android:text="07-06 17:50 哈姆雷特 完成"
            android:textColor="@color/gray_light"
            android:textSize="12dp" />

        <com.honeywell.wholesale.ui.base.BaseTextView
            android:id="@+id/stock_listview_retro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textSize="16dp"
            android:text="@string/transaction_fragment_tab_stoke_retro"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            />

    </RelativeLayout>
    
</LinearLayout>