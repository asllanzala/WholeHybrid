<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="4dp"
    android:paddingLeft="@dimen/left_border_size"
    android:paddingRight="@dimen/right_border_size"
    android:paddingTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

        <com.honeywell.wholesale.ui.base.BaseTextView
            android:id="@+id/order_listview_item_customer_name_textView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            android:text="text"
            android:textSize="13dp" />

        <com.honeywell.wholesale.ui.base.BaseTextView
            android:id="@+id/order_listview_item_order_number_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:text="text"
            android:textSize="13dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/order_listview_item_order_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/order_listview_item_products_textView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="绿茶，红茶，龙井茶"
                    android:singleLine="true"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:textColor="@color/dark_gray"
                    android:textSize="11dp" />

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/order_listview_item_sale_amount_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:text="900"
                    android:textSize="13dp" />

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/order_listview_item_total_money_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="900"
                    android:textSize="13dp" />

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/order_listview_item_sign_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/order_listview_item_total_money_textView"
                    android:maxLines="1"
                    android:text="￥"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/value_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/order_listview_item_order_time_textView"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="2015-5-22 17:55 "
                    android:maxLines="1"
                    android:textColor="@color/dark_gray"
                    android:textSize="11dp" />

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/order_listview_item_employee_name_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/order_listview_item_order_time_textView"
                    android:textColor="@color/dark_gray"
                    android:maxLines="1"
                    android:text="王店员"
                    android:textSize="11dp" />

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/order_listview_item_deadline_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/order_listview_item_employee_name_textView"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/dark_gray"
                    android:gravity="end|center_vertical"
                    android:maxLines="1"
                    android:visibility="gone"
                    />

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/order_listview_item_status_tag_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:textSize="12dp"
                    />

            </RelativeLayout>

        </LinearLayout>

        <com.honeywell.wholesale.ui.base.BaseTextView
            android:id="@+id/order_listview_item_payment_status_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:text="赊账"
            android:textSize="13dp"
            android:textColor="@color/yellow"/>

    </LinearLayout>


</LinearLayout>