<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/payment_item_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="@dimen/activity_header_margin"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/payment_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/payment_item_icon"
        android:textColor="@color/gray_deep_than_middle"
        android:textSize="16dp"
        />

</RelativeLayout>