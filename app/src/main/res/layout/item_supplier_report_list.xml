<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/report_supplier_imageView"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon_logout"
        android:layout_margin="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="6dp"
        >

        <com.honeywell.wholesale.ui.base.BaseTextView
            android:id="@+id/report_supplier_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginTop="4dp"
            android:text="123123"
            />

        <LinearLayout
            android:id="@+id/report_supplier_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@id/report_supplier_name"
            android:orientation="horizontal">

            <com.honeywell.wholesale.ui.base.BaseTextView
                android:id="@+id/report_stock_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:singleLine="true"
                android:text="进货额"
                />

            <com.honeywell.wholesale.ui.base.BaseTextView
                android:id="@+id/report_stock_radio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:singleLine="true"
                android:text="销量"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/report_supplier_info"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <com.honeywell.wholesale.ui.base.BaseTextView
                android:id="@+id/report_supplier_payable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textSize="14dp"
                android:text="利润"
                />

            <com.honeywell.wholesale.ui.base.BaseTextView
                android:id="@+id/report_supplier_payable_radio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:singleLine="true"
                android:gravity="end"
                android:text="库存"
                android:layout_marginEnd="10dp"
                />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>