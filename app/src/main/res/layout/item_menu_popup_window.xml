<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:paddingStart="@dimen/left_border_size"
                android:paddingEnd="@dimen/right_border_size"
                android:background="@color/white">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="39dp">
        <com.honeywell.wholesale.ui.base.BaseTextView
            android:id="@+id/tv_item_pw_menu"
            android:layout_width="200dp"
            android:layout_height="39dp"
            android:gravity="start|center_vertical"
            android:maxWidth="200dp"
            android:maxLength="30"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="15dp"
            android:textColor="@color/black"/>
        
        <ImageView
            android:id="@+id/warehouse_select_image_view"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/warehouse_selected"/>
        
    </RelativeLayout>

    <View
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:background="@color/bg_gray"/>

</LinearLayout>