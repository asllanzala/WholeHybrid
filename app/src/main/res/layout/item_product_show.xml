<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="#f3f2f2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f2f2"
        android:orientation="horizontal">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/show_product_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="#a0a0a0"
        android:orientation="vertical">

        <com.honeywell.wholesale.ui.base.BaseTextView
            android:id="@+id/show_product_name"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/home_default_product_information_text_size"
            android:gravity="center"
             />
        <com.honeywell.wholesale.ui.base.BaseTextView
            android:id="@+id/show_product_stock"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/home_default_product_information_text_size"
            android:gravity="center"
             />
    </LinearLayout>

</RelativeLayout>