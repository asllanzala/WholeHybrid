<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/title_bar_gray_background"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.honeywell.wholesale.ui.base.BaseTextView
                android:id="@+id/report_fragment_tab_income"
                style="@style/tabLevel1TextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/report_income_tab"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <View
                android:id="@+id/report_fragment_tab_income_cursor"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/light_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.honeywell.wholesale.ui.base.BaseTextView
                android:id="@+id/report_fragment_tab_product"
                style="@style/tabLevel1TextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/report_product_tab"
                android:textColor="@color/gray_middle"
                android:textSize="14dp" />

            <View
                android:id="@+id/report_fragment_tab_product_cursor"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/title_bar_gray_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.honeywell.wholesale.ui.base.BaseTextView
                android:id="@+id/report_fragment_tab_customer"
                style="@style/tabLevel1TextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/report_customer_tab"
                android:textColor="@color/gray_middle"
                android:textSize="14dp" />

            <View
                android:id="@+id/report_fragment_tab_customer_cursor"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/title_bar_gray_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.honeywell.wholesale.ui.base.BaseTextView
                android:id="@+id/report_fragment_tab_supplier"
                style="@style/tabLevel1TextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/report_supplier_tab"
                android:textColor="@color/gray_middle"
                android:textSize="14dp" />

            <View
                android:id="@+id/report_fragment_tab_supplier_cursor"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/title_bar_gray_background" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/income_select_bar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:visibility="visible"
            >
            
            <LinearLayout
                android:id="@+id/income_format_layout"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/income_left_btn"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_left_btn"
                    />

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/format_textView"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="今天"
                    />

                <ImageView
                    android:id="@+id/income_right_btn"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_right_btn"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/income_time_select_layout"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:orientation="horizontal">

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/time_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="1123"
                    />

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pull_down_icon"
                    />

            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/product_select_bar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:visibility="gone"
            >

            <LinearLayout
                android:id="@+id/product_format_layout"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="horizontal">

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/product_format_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="1123"
                    />

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pull_down_icon"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/product_time_select_layout"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_toEndOf="@id/product_format_layout"
                android:layout_marginStart="28dp"
                android:gravity="end"
                android:orientation="horizontal">

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/product_time_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="321"
                    />

                <ImageView
                    android:layout_marginEnd="28dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pull_down_icon"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/product_switch_imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/report_list_toggle_icon"
                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/customer_select_bar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:visibility="gone"
            >

            <LinearLayout
                android:id="@+id/customer_format_layout"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="horizontal">

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/customer_format_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="5dp"
                    android:text="1123"
                    />

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pull_down_icon"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_time_select_layout"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="end"
                android:layout_toEndOf="@id/customer_format_layout"
                android:layout_marginStart="28dp"
                android:orientation="horizontal">

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/customer_time_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="321"
                    />

                <ImageView
                    android:layout_marginEnd="28dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pull_down_icon"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/customer_switch_imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/report_list_toggle_icon"
                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/supplier_select_bar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:visibility="gone"
            >

            <LinearLayout
                android:id="@+id/supplier_format_layout"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="horizontal">

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/supplier_format_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="5dp"
                    android:text="1123"
                    />

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pull_down_icon"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/supplier_time_select_layout"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="end"
                android:layout_toEndOf="@id/supplier_format_layout"
                android:layout_marginStart="28dp"
                android:orientation="horizontal">

                <com.honeywell.wholesale.ui.base.BaseTextView
                    android:id="@+id/supplier_time_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="321"
                    />

                <ImageView
                    android:layout_marginEnd="28dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pull_down_icon"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/supplier_switch_imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/report_list_toggle_icon"
                />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="@color/home_splite_line"
        />

    <FrameLayout
        android:id="@+id/chart_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>