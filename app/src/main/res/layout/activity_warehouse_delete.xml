<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/sku_activity_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sku_activity_blank_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:layout_above="@+id/sku_activity_content_layout">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="@dimen/left_border_size"
            android:paddingEnd="@dimen/right_border_size"
            android:gravity="center_vertical">

            <com.honeywell.wholesale.ui.base.BaseTextView
                android:id="@+id/warehouse_delete_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textSize="15dp"
                android:textColor="@color/warehouse_delte_text_color"
                android:text="删除"/>

            <ImageView
                android:id="@+id/warehouse_delete_close_iamgeview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/warehouse_delete_close"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/all_border" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:paddingStart="@dimen/left_border_size"
            android:paddingEnd="@dimen/right_border_size">

            <com.honeywell.wholesale.ui.base.BaseTextView
                android:id="@+id/warehouse_delete_content_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:textSize="15dp"
                android:textColor="@color/warehouse_delte_text_color"
                android:text="是否确认删除该仓库？"/>

            <Button
                android:id="@+id/warehouse_delete_save_button"
                android:layout_width="320dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:padding="0dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:textSize="15dp"
                android:text="确认"/>

        </RelativeLayout>
        
    </LinearLayout>
</RelativeLayout>